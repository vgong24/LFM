<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:id="@+id/attendeeProfilePic"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/attendeeProfilePic"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/attendeeListViewName"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            android:layout_toLeftOf="@+id/attendeeKick"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add"
            android:id="@+id/attendeeAddFriend"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="16dp"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kick"
            android:id="@+id/attendeeKick"
            />

</RelativeLayout>
